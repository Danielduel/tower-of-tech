{
  "tasks": {
    "start": "deno run -A ./src/main.ts",
    "refreshPlaylists": "deno run -A ./src/tools/refreshPlaylists.ts",
    "migratePlaylists": "deno run -A ./src/tools/migratePlaylists.ts",
    "generateCupOfADayPlaylist": "deno run -A ./src/tools/generateCupOfADayPlaylist.ts",
    "generate": "deno run ./src/main.ts",

    "denoflare:websocket-proxy-beatleader": "",

    "dev": "deno task s3s-fs-local & deno task editor:dev",
    "dev-remote": "deno task editor:dev-remote",
    "purge": "deno run -A --unstable ./purge.ts",

    "discord-bot:register": "deno run -A --env ./apps/discord-bot/setup/register-tot-bot-slash-commands.ts",

    "s3s-fs-local": "./scripts/s3s-fs-local.sh",

    "editor:dev": "TOT_ENVIRONMENT=local deno run -A --unstable --no-check --watch --import-map importMap.local.json ./apps/editor/server.tsx -p 8081",
    "editor:dev-remote": "ULTRA_LOG_LEVEL=DEBUG TOT_ENVIRONMENT=local TOT_REMOTE=remote deno run -A --unstable --no-check --watch ./apps/editor/server.tsx -p 8081",
    "editor:test": "deno test --allow-all",
    "editor:build": "deno run -A ./webapp/build.ts",
    "editor:start": "ULTRA_MODE=production deno run -A --no-remote ./webapp/server.js"
  },
  "compilerOptions": {
    "jsx": "react-jsxdev",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "fmt": {
    "files": { "exclude": [".ultra"] }
  },
  "lint": {
    "files": { "exclude": [".ultra"] }
  },
  "importMap": "./importMap.json"
}
